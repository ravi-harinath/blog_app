

<%= render "shared/form_errors", object: post %>


<%= form_with model: post, local: true do |f| %>
  <div class="space-y-4 max-w-3xl mx-auto">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div>
      <%= f.label :body, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :body, rows: 8, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-200" %>
    </div>

    <div class="flex items-center space-x-2">
      <%= f.check_box :published, class: "h-4 w-4 text-blue-600" %>
      <%= f.label :published, class: "text-sm text-gray-700" %>
    </div>

    <div>
      <%= f.submit class: "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded" %>
    </div>
  </div>
<% end %>
